<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="#32d1a9"
    android:id="@+id/fr"
    >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="#0000"
            android:textSize="20dp"
            android:text="@string/wallet"
            android:id="@+id/frbtnViTien"
            android:drawableLeft="@drawable/vitien"
            android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#0000"
            android:textSize="20dp"
            android:text="@string/add"
            android:id="@+id/frbtnThu"
            android:drawableLeft="@drawable/addmoney"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#0000"
            android:textSize="20dp"
            android:text="@string/Spending"
            android:id="@+id/frbtnChi"
            android:drawableLeft="@drawable/chi"/>
        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/frbtnTraCuu"
            android:background="#0000"
            android:textSize="20dp"
            android:text="@string/Look_up"
            android:drawableLeft="@drawable/tracuu"/>

        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/frbtnCaiDat"
            android:background="#0000"
            android:textSize="20dp"
            android:text="@string/setting"
            android:drawableLeft="@drawable/setting"/>

        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="#0000"
            android:textSize="20dp"
            android:text="@string/help"
            android:id="@+id/frbtnGiupDo"
            android:drawableLeft="@drawable/help"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/frbtnThongTin"
            android:background="#0000"
            android:textSize="20dp"
            android:text="@string/information"
            android:drawableLeft="@drawable/thongtin"/>

